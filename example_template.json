{
  "Name": "SmartThermostat",
  "Description": "A smart thermostat device",
  "InitState": "idle",
  "Modes": ["heating", "cooling"],
  "InternalVariables": [
    {
      "Name": "temperature",
      "Description": "Current temperature",
      "IsInside": true,
      "PublicVisible": true,
      "Trust": "high",
      "Privacy": "low",
      "LowerBound": -10,
      "UpperBound": 50
    }
  ],
  "ImpactedVariables": ["temperature"],
  "APIs": [
    {
      "Name": "setTemperature",
      "Description": "Set target temperature"
    }
  ],
  "WorkingStates": [
    {
      "Name": "heating",
      "Description": "Device is heating",
      "Trust": "high",
      "Privacy": "low",
      "Invariant": "temperature < targetTemp"
    },
    {
      "Name": "idle",
      "Description": "Device is idle",
      "Trust": "high",
      "Privacy": "low",
      "Invariant": "true"
    }
  ]
}
